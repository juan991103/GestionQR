@{
    ViewBag.Title = "Usuarios";
    Layout = "~/Views/Shared/Login.cshtml";
}

<h1>QR Project Manager</h1>

<!-- Tabs Titles -->
@Html.ActionLink("PRINCIPAL", "BuzonPrincipal", "Login", null, new { @class = "inactive underlineHover" })
<h2 class="active"> USUARIOS </h2>
@Html.ActionLink("ADMINISTRADOR", "Administrador", "Login", null, new { @class = "inactive underlineHover" })

<!-- Icon -->
<div class="fadeIn first">
    <img src="http://danielzawadzki.com/codepen/01/icon.svg" id="icon" alt="User Icon" />
</div>

<!-- Login Form -->
@using (Html.BeginForm("Seleccion", "Buzon", FormMethod.Post))
{
    <input type="text" id="login" class="fadeIn second" name="username" placeholder="Usuario">
    <input type="text" id="password" class="fadeIn third" name="password" placeholder="Contraseña">
    <!--<input type="submit" class="btn fadeIn fourth" value="Iniciar Sesion" name="submit">-->
}

<a href="@Url.Action("Index", "UsuariosQ")">
    <input type="submit" class="btn fadeIn fourth" value="Ver Interfaz de Queja" name="submit">
</a>

<a href="@Url.Action("Index", "UsuariosR")">
    <input type="submit" class="btn fadeIn fourth" value="Ver Interfaz de Reclamacion" name="submit">
</a>

<!-- Remind Passowrd -->
<div id="formFooter">
    <a class="underlineHover" href="#">Recuperar Contraseña?</a>
</div>
